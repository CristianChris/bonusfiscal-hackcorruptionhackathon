<% if !citizen_signed_in? %>
<section id="intro" class="container content-section text-center">
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
              <%= image_tag("logo_bonus.png", class: "img-responsive img-fluid", style: "max-width: 100%;; ") %>
            <br/>
            <p class="title-logo">BONus fiscal reprezintă o platformă menită să motiveze oamenii să ceară de la vânzători bonurile de casă prin ofereirea șansei să câștige un premiu pentru implicarea mai activă în procesul de colectare a impozitelor şi taxelor Republicii Moldova</p>
            <hr class="light">
               <tr class="col-md-3 col-sm-4">
                <td class="col-md-4 col-sm-4  col-xs-6">
                  <a href="/citizens/sign_up" class="btn btn-warning"> Înregistrează-te </a>
                 </td>
                 <td class="col-md-4 col-sm-4 col-xs-6">
                  <a href="/citizens/sign_in" class="btn btn-success"> Conectează-te </a>
                  </td>
                </tr>
                <br>
              <div class="fa-stack fa-2x" align="center" style="padding-top: 10px">
                <a href="#about"  class="page-scroll" >
                  <i class="fa fa-angle-double-down animated" id="fa-color"></i>
                </a>
            </div>
         </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
<section id="about" class="container content-section text-center">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <%= image_tag("intro.png", class: "img-responsive img-fluid",style: "max-width: 100%;") %>
        <% if citizen_signed_in? %>
          <table align="center">
           <tr>
            <td>
              <a href="/tickets/new" class="btn btn-primary btn-lg"> Adaugă bonul </a>
            </td>
          </tr>
        </table>
        <% end %>
        <div class="fa-stack fa-2x" align="center" style="padding-top: 10px">
          <a href="#categories"  class="page-scroll" >
            <i class="fa fa-angle-double-down animated" id="fa-color"></i>
          </a>
        </div>
    </div>
  </div>
</section>

<section id="categories" class="container content-section text-center" >
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <%= image_tag("categorii.png", class: "img-responsive img-fluid",style: "max-width: 100%;") %>
    </div>
  </div>
</section>



<footer>
  <div class="container text-center">
    <p>Copyright &copy; Bonus Fiscal 2016</p>
  </div>
</footer>



<div class="container">
  <h1>Bonuri fiscale</h1>
  <% if !@tickets.empty? %>
    <div class="container">
      <table class="table table-tickets ">
        <% i = 0 %>
        <% @tickets.each do |t| %>
          <%i = i+1%>
          <% if t.citizen == current_citizen %>
            <tr class='clickable-row' data-href = <%= ticket_path(t) %>>
              <td><%= i %></td>
              <td cursor="pointer"><%= t.winning_id %></td>
              <td>
                <%= link_to 'Detalii', t %>
                <%= link_to 'Șterge', t, method: :delete, data: { confirm: 'Sunteți sigur?' } %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  <%else%>
    <h3>Nu sunt tichete înregistrate</h3>
  <% end %>

  <script type="text/javascript">
    jQuery(document).ready(function($) {
      $(".clickable-row").click(function() {
        window.document.location = $(this).data("href");
      });
    });
  </script>
</div>

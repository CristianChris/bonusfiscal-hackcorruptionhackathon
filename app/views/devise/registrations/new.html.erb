<div class="container">
  <div class="panel panel-default devise-bs">
    <div class="panel-heading">
      <h4>Înregistrează-te</h4>
    </div>
    <div class="panel-body">
      <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, label: "Email", autofocus: true, class: "form-control" %>
      </div>
        <div class="form-group">
          <%= f.text_field :name, label: "Prenume", autofocus: true, class: "form-control" %>
          <%= f.text_field :surname, label: "Nume", autofocus: true, class: "form-control" %>
        </div>
      <div class="form-group">
        <%= f.password_field :password, label: "Parolă", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, label: "Confirmă parola", class: "form-control" %>
      </div>
      <div align="center">
        <%= f.submit "Înregistrează-te", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div align="center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>